{
    "version": 2,
    "functions": {
        "preBuild": {
            "install":  ["python3", "python3-pip"],
            "commands": [
                {
                    "command": "pip install -r requirements.txt"
                },
                {
                    "command": "cd bin && python create-sqlite-db.py && cd .."
                }  
            ]
        },
        "postBuild": {
            "commands": [
                {
                    "command": "python -m src.app"
                }
            ]   
        }
      }
}